<style lang="scss">
  #services {
    width: 100%;
    min-height: fit-content;
    max-height: 100vh;
    background: var(--burnt-umber);
    color: var(--oat-husk);
    margin: 0;
    padding: 0 2rem 2.5rem 2rem;
    #learn-more {
      height: max-content;
      margin: 0 0 0 0;
      padding: 2rem 0 2rem 0;
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      align-items: flex-start;
      #left {
        margin: 0 2rem 0 0;
        padding: 0;
        width: 40%;
        h2 {
          margin: 0 0 0 0;
          padding: 0;
          font-weight: 400;
        }
        a {
          background: var(--oat-husk);
          border: 1px solid var(--oat-husk);
          padding: 0.5rem 1.25rem 0.5rem 1.25rem;
          color: var(--hazelwood);
          border-radius: 34px;
          font-size: 1rem;
          transition:
            background 0.2s ease-in-out,
            border 0.2s ease-in-out,
            color 0.2s ease-in-out;
        }
        a:hover {
          background: var(--hazelwood);
          border: 1px solid var(--hazelwood);
          color: var(--oat-husk);
        }
        a:active {
          // text-decoration: underline;
        }
      }
    }
    #services-list {
      margin: 0 0 0rem 0;
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      line-height: 1;
      ul {
        margin: 0 2rem 0 0;
        padding: 0 0 0 0;
        list-style: none;
        width: 40%;
        display: flex;
        flex-direction: column;
        li {
          margin: 0;
          padding: 0;
          line-height: normal;
          span {
            display: flex;
            padding: 1.5rem 0 1.5rem 0;
            margin: 0 0 0 0;
            width: 100%;
            justify-content: flex-start;
            align-items: center;
            border-bottom: 1px solid var(--hazelwood);
            font-size: 1.5rem;
            font-weight: 300;
            a {
              white-space: nowrap;
              overflow: hidden;
              text-overflow: ellipsis;
            }
            .link-text {
              max-width: 90%;
              margin-right: 1rem;
              display: flex;
              min-width: 0;
            }
            img {
              display: block;
              margin: 0;
              padding: 0;
            }
          }
        }
        li:last-child {
          span {
            border-bottom: none;
          }
        }
      }
    }
  }

  @media screen and (max-width: 920px) {
    #services {
      background: var(--burnt-umber);
      color: var(--oat-husk);
      margin: 0;
      padding: 2.5rem 2rem 3.75rem 2rem;
      height: max-content;
      #learn-more {
        height: max-content;
        margin: 0 0 2.5rem 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        #left {
          // margin: 0 2rem 2.5rem 0;
          padding: 0;
          display: flex;
          flex-direction: row;
          justify-content: space-between;
          width: 100%;
          h2 {
            margin: 0 0 0rem 0;
            padding: 0;
            font-size: 1.45rem;
            font-weight: 400;
          }
          a {
            margin: 0;
            padding: 0;
            width: max-content;
            height: max-content;
            background: var(--oat-husk);
            border: 1px solid var(--oat-husk);
            padding: 0.5rem 1.25rem 0.5rem 1.25rem;
            color: var(--hazelwood);
            font-size: 0.875rem;
            transition:
              background 0.2s ease-in-out,
              border 0.2s ease-in-out,
              color 0.2s ease-in-out;
          }
          a:hover {
            background: var(--deep-coal);
            color: var(--oat-husk);
          }
          a:active {
            text-decoration: underline;
          }
        }
        #right {
          width: 100%;
          font-size: 1.15rem;
          font-weight: 300;
          // padding: .4rem 0 0 0; /* better vertical alignment with left side */
        }
      }
      #services-list {
        margin: 0 0 0 0;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        width: 100%;
        ul:first-of-type {
          li:first-child {
            span {
              padding-top: 0;
            }
          }
          li:last-child {
            span {
              border-bottom: 1px solid var(--hazelwood);
            }
          }
        }
        ul:last-of-type {
          li:last-child {
            span {
              padding-bottom: 0;
            }
          }
        }
        ul {
          margin: 0 2rem 0 0;
          padding: 0 0 0 0;
          list-style: none;
          width: 100%;
          li {
            span {
              display: flex;
              flex-wrap: wrap;
              padding: 1rem 0 1rem 0;
              width: 100%;
              justify-content: flex-start;
              align-items: center;
              border-bottom: 1px solid var(--hazelwood);
              font-size: 1rem;
              a {
                text-decoration: underline;
                white-space: normal;
                overflow: visible;
                text-overflow: clip;
              }
              .link-text {
                flex: 1;
                margin-right: 2rem;
                display: flex;
                align-items: center;
                flex-wrap: wrap;
                min-width: 0;
              }
            }
          }
        }
      }
    }
  }
</style>
