---
import Placeholder from "../../assets/grass.webp";
---

<section class="services-hero">
  <div class="container">
    <h1 class="header">Resources</h1>
  </div>
</section>

<style lang="scss">
  .services-hero {
    background: url("../../assets/grass.webp") no-repeat center 10%;
    background-size: cover;
    .container {
      width: 100%;
      height: 70vh;
      padding: 6.25rem 0rem 0rem 2rem;
      .header {
        font-size: 3rem;
        font-weight: 300;
        margin-bottom: 8rem;
        color: var(--oat-husk);
      }
    }
  }

  @media screen and (max-width: 920px) {
    .services-hero {
      background: url("../../assets/grass.webp");
      background-size: cover;
      .container {
        padding: 5rem 2rem 5rem 2rem;
        height: 50vh;
        .header {
          font-size: 2.25rem;
          margin-bottom: 2.5rem;
        }
        .subheader {
          font-size: 1rem;
          width: 100%;
        }
      }
    }
  }
</style>
