const featuredDate = featuredPost ? formatDate(featuredPost.data.date) : "";
const featuredExcerpt = featuredPost ? getExcerpt(featuredPost.body, 30) : "";

function formatDate(dateString: string) {
  const date = new Date(dateString);
  const day = String(date.getDate()).padStart(2, "0");
  const month = String(date.getMonth() + 1).padStart(2, "0");
  const year = date.getFullYear();
  return `${day}.${month}.${year}`;
}

function getExcerpt(content: string, wordCount: number) {
  const words = content.split(" ");
  if (words.length <= wordCount) {
    return content;
  }
  return words.slice(0, wordCount).join(" ") + "...";
}

const ammendedBlogs = blogs.map((blog: any) => ({
  ...blog,
  data: {
    ...blog.data,
    date: formatDate(blog.data.date),
  },
  excerpt: getExcerpt(blog.body, 30),
}));
---

<section class="info-section">
  <div class="row">
    <div class="container">
      <h2>Featured Blog</h2>
      <h3>{featuredPost?.data?.title}</h3>
      <p>{featuredDate}</p>
      {
        featuredPost && (
          <img
            class="mobile"
            src={featuredPost.data["hero-image"]}
            alt={featuredPost.data.title}
          />
        )
      }
      <p>
        {featuredExcerpt}
      </p>
      <a href={`/blogs/${featuredPost?.slug}`}
        >Read More <img src={Arrow.src} /></a
      >
    </div>
    {
      featuredPost && (
        <img
          class="desktop"
          src={featuredPost.data["hero-image"]}
          alt={featuredPost.data.title}
        />
      )
    }
  </div>
  <div class="row">
    <h2>Recent Blogs</h2>
  </div>
  <div class="row grid-posts">
    {
      ammendedBlogs.map((blog: any) => (
        <div class="container">
          <div>
            <img src={blog.data["hero-image"]} alt={blog.data.title} />
            <h3>{blog.data.title}</h3>
            <p>{blog.data.date}</p>
            <p>{blog.excerpt}</p>
            <a href={`/blogs/${blog.slug}`}>
              Read More
              <img src={Arrow.src} />
            </a>
          </div>
        </div>
      ))
    }
  </div>
</section>

