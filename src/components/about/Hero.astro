<style lang="scss">
  .hero-section {
    width: 100%;
    padding: 6.25rem 2rem 2rem 2rem;
    .hero-content {
      width: 100%;
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      align-items: flex-start;
      h1 {
        font-size: 3rem;
        font-weight: 300;
        width: 40%;
        p {
          margin: 2rem 0 0 0;
          font-size: 1.5rem;
          font-weight: 300;
          color: var(--hazelwood);
        }
      }
      .hero-image {
        width: 50vw;
        margin-left: auto;
        img {
          aspect-ratio: 4/3;
          border-radius: 0.5rem;
          width: 100%;
          height: auto;
          object-fit: cover;
        }
      }
    }
    #follow-up {
      width: 40%;
      font-weight: 300;
      margin: 8rem 0 0 0;
    }
  }

  @media screen and (max-width: 920px) {
    .hero-section {
    width: 100%;
    padding: 6.25rem 2rem 0 2rem;
    .hero-content {
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      h1 {
        font-size: 2.25rem;
        font-weight: 300;
        width: 100%;
        margin: 0;
        p {
          margin: 2.5rem 0 2.5rem 0;
          font-size: 1rem;
          font-weight: 300;
          color: var(--hazelwood);
        }
      }
      .hero-image {
        width: 100%;
        margin-left: 0;
        img {
          aspect-ratio: 4/3;
          border-radius: 0.5rem;
          width: 100%;
          height: auto;
          object-fit: cover;
        }
      }
    }
    #follow-up {
      width: 100%;
      font-weight: 300;
      margin: 8rem 0 0 0;
      padding-bottom: 2.5rem;
      border-bottom: 1px solid var(--hazelwood);
    }
  }
  }
</style>
